<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="@color/grey_black"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-thin"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="1dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_black">

            <pl.pawelkleczkowski.customgauge.CustomGauge
                android:id="@+id/temperature"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                app:gaugeEndValue="1000"
                app:gaugePointEndColor="@color/orange"
                app:gaugePointSize="0"
                app:gaugePointStartColor="@color/Red"
                app:gaugeStartAngle="135"
                app:gaugeStartValue="0"
                app:gaugeStrokeCap="ROUND"
                app:gaugeStrokeColor="@color/black"
                app:gaugeStrokeWidth="13dp"
                app:gaugeSweepAngle="270"
                app:layout_constraintEnd_toStartOf="@+id/humidity"
                app:layout_constraintStart_toStartOf="@id/card_top"
                app:layout_constraintTop_toTopOf="@id/card_top"/>
            <pl.pawelkleczkowski.customgauge.CustomGauge
                android:id="@+id/humidity"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                app:layout_constraintEnd_toEndOf="@id/card_top"
                app:layout_constraintStart_toEndOf="@id/temperature"
                app:layout_constraintTop_toTopOf="@id/card_top"
                app:gaugePointStartColor="@color/green"
                app:gaugePointEndColor="@color/green"
                app:gaugePointSize="0"
                app:gaugeStartAngle="135"
                app:gaugeStrokeCap="ROUND"
                app:gaugeStrokeColor="@color/black"
                app:gaugeStrokeWidth="13dp"
                app:gaugeStartValue="0"
                app:gaugeEndValue="1000"
                app:gaugeSweepAngle="270" />

            <TextView
                android:id="@+id/temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/sample_temp"
                android:textSize="20sp"
                android:textColor="@color/orange"
                app:layout_constraintTop_toTopOf="@id/temperature"
                app:layout_constraintBottom_toBottomOf="@id/temperature"
                app:layout_constraintStart_toStartOf="@id/temperature"
                app:layout_constraintEnd_toEndOf="@id/temperature"/>
            <TextView
                android:id="@+id/humi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/sample_humi"
                android:textSize="20sp"
                android:textColor="@color/green"
                app:layout_constraintTop_toTopOf="@id/humidity"
                app:layout_constraintBottom_toBottomOf="@id/humidity"
                app:layout_constraintStart_toStartOf="@id/humidity"
                app:layout_constraintEnd_toEndOf="@id/humidity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/temperature_label"
                android:textSize="10sp"
                android:textAllCaps="true"
                android:textColor="@color/pale_white"
                app:layout_constraintBottom_toBottomOf="@id/temperature"
                app:layout_constraintStart_toStartOf="@id/temperature"
                app:layout_constraintEnd_toEndOf="@id/temperature"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/humidity_label"
                android:textSize="10sp"
                android:textColor="@color/pale_white"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="@id/humidity"
                app:layout_constraintStart_toStartOf="@id/humidity"
                app:layout_constraintEnd_toEndOf="@id/humidity"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>